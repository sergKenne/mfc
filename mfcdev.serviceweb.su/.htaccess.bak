php_value post_max_size 128M
php_value upload_max_filesize 10M

Options All -Indexes
AddDefaultCharset UTF-8

<files config.ini>
  order deny,allow
  deny from all
</files>

<files sqlerrors.txt>
  order deny,allow
  deny from all
</files>

<If "%{REQUEST_URI} =~ m#files/(.*?)\.ph(.*?)#">
    Order Deny,Allow
    Deny from all
</If>

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ /index.php

